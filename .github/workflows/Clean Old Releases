name: Clean Old Release

env:
  ACTIONS_ALLOW_UNSECURE_COMMANDS: true

on:
  push:

  watch:
    types: started
  schedule:
    - cron: '00 22 * * 1'


jobs:

  build:
    runs-on: ubuntu-18.04

    steps:

      - name: Remove old Releases
        uses: dev-drprasad/delete-older-releases@v0.2.0
        with:
          keep_latest: 15
          delete_tags: true
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}   
